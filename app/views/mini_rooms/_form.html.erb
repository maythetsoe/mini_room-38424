<%= form_with model: @mini_room, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "画像のタイトル" %><br />
    <%= f.text_field :title, id:"mini_room_title" %>
  </div>

  <div class="field">
    <%= f.label :concept, "コンセプト" %><br />
    <%= f.text_area :concept, class: :form__text, id:"mini_room_concept" %>
  </div>

  <div class="field">
    <%= f.label :image, "ミニマルの画像" %><br />
    <%= f.file_field :image, id:"mini_room_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>